<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llContainerPastGuessBoxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPastGuessBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="9"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"/>

        <TextView
            android:id="@+id/tvPastGuessBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="9"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"/>

        <TextView
            android:id="@+id/tvPastGuessBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="9"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"/>

        <TextView
            android:id="@+id/tvPastGuessBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="9"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llcontainerMatchedGuesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/llContainerPastGuessBoxes"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMatchedGuess1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_match_hint_none" />

        <ImageView
            android:id="@+id/ivMatchedGuess2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_match_hint_none" />

        <ImageView
            android:id="@+id/ivMatchedGuess3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_match_hint_none" />

        <ImageView
            android:id="@+id/ivMatchedGuess4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_match_hint_none" />

    </LinearLayout>

</LinearLayout>